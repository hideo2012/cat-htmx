<div class="row py-2">
      <!-- 見出し（兼ソートボタン）-->
      <div class="col-4 mt-auto">
        <%= to_htmx sort_link(@search, :name)  %>
      </div>
      <div class="col-4 mt-auto">
        <%= to_htmx sort_link(@search, :age)  %>
      </div>

      <!-- 登録リンク -->
      <div class="col-4 d-flex justify-content-end">
        <%= link_to icon_with_text("plus-circle", "登録"),
              new_cat_path, 
              class: "btn btn-outline-primary"
        %>
      </div>
</div>

<!-- 一覧 -->
<%= render @cats %>

<!-- ページング -->
<div class="d-flex justify-content-end mt-3"
     hx-replace-url="true">
  <%= to_htmx paginate(@cats, theme: 'bootstrap-5')  %>
</div>
